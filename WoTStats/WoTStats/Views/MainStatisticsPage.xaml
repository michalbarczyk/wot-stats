        <Grid VerticalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Frame Grid.Column="1" HasShadow="True" CornerRadius="10" Margin="0,10,0,110" Padding="5,5,5,5" 
                   Opacity="0.5"
                   HorizontalOptions="Center" VerticalOptions="Start">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                    <Label Text="{Binding Nickname}" TextColor="Black" 
                           FontSize="22" FontAttributes="Bold" 
                           VerticalOptions="Center" HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

        </Grid>

        <Grid Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame HasShadow="True" CornerRadius="10" Margin="10,5,5,5" Padding="5,5,5,5" HeightRequest="60" VerticalOptions="Start">
                <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                    <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                        <Label Text="{Binding Battles}" TextColor="Black" FontSize="15" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Text="Battles" TextColor="#7D7D7D" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
            <Frame Grid.Column="1" HasShadow="True" CornerRadius="10" Margin="5,5,5,5" Padding="5,5,5,5" HeightRequest="60" VerticalOptions="Start">
                <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                    <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                        <Label Text="{Binding MaxFrags}" TextColor="Black" FontSize="15" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Text="Max Frags" TextColor="#7D7D7D" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
            <Frame Grid.Column="2" HasShadow="True" CornerRadius="10" Margin="5,5,5,5" Padding="5,5,5,5" HeightRequest="60" VerticalOptions="Start">
                <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                    <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                        <Label Text="{Binding MaxDamage}" TextColor="Black" FontSize="15" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Text="Max Damage" TextColor="#7D7D7D" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
            <Frame Grid.Column="3" HasShadow="True" CornerRadius="10" Margin="5,5,10,5" Padding="5,5,5,5" HeightRequest="60" VerticalOptions="Start">
                <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                    <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                        <Label Text="{Binding AvgExperience}" TextColor="Black" FontSize="15" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Text="Average Exp." TextColor="#7D7D7D" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </Grid>
        <Label Grid.Row="2" Text="{Binding ExampleWN8}" FontSize="Small" 
               HorizontalOptions="Center" VerticalOptions="Center"
               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/> 
